<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.crevill.login.LoginMapper">
	
	<select id="selectLoginStaff" parameterType="kr.co.crevill.login.LoginDto" resultType="Integer">
        SELECT COUNT(*)
          FROM STAFF_INFO
         WHERE STAFF_ID = #{staffId}
           AND STORE_ID = #{storeId}
    </select>
	
</mapper>